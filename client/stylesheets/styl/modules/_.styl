.small-title
    text-transform uppercase
    font-size font-size-small
    color text-lightest
    font-weight 500
    display block
    margin-bottom 1rem
    line-height 1em

.user-pro
    vertical-align top
    text-transform uppercase
    font-size 12px
    border-radius border-radius-normal
    background-color #000
    color #fff
    font-weight 500
    line-height 1em
    transition all .1s ease
    display inline-block
    line-height 1.4em
    padding 0 4px
    margin-left 3px

.fade
    fixed top left
    width 100%
    height 30rem
    max-height 40%
    content ' '
    display block
    background linear-gradient(to bottom, #f6f6f6, transparent)
    +below('m')
        display none

nav
    background-color #fff
    fixed top left
    padding 1rem standard-page-padding
    width 100%
    z-index 1000
    display flex
    justify-content space-between
    .actions
        display flex
        flex-grow 1
        justify-content space-between
    .jump-to
        margin-left 1.6rem
        vertical-align top
        user-select none
        li
            line-height 0
            label
                svg
                    margin-right .6rem
                    relative top 4px
                &:hover
                    svg
                        stroke text-default
                    cursor pointer
            input
                height auto !important
                line-height 1.7em !important
                &:focus
                    & + label
                        svg
                            stroke color-heading
    a
        color text-disabled
        font-weight 400
        line-height 1rem
        &:hover
            color color-heading
        &.active
            font-weight 500
            color color-heading
    +below('m')
        padding 1rem standard-mobile-page-padding
        display block
        border-bottom 1px solid border-grey
        .actions
            width 100%
            overflow-x auto
            height 43px
            display flex
            justify-content center
            .tooltip::before, .tooltip::after
                display none !important
            &::-webkit-scrollbar
                width 0px
                background transparent
            & > *
                display inline-block
                vertical-align top
            &.searching
                .list.horizontal.float-right
                    display none !important
        a.inline
            display block
            width 100%
            text-align center
        .jump-to
            margin-left 0
        .list.horizontal
            float none
            & + .list.horizontal
                margin-left 1rem

.content-intro
    width 70%
    padding 7rem 0 4rem 0
    small
        text-transform uppercase
        color color-primary
        font-size font-size-standard
        font-weight 600
        margin-bottom 1rem
        display block
    h2
        font-weight 600
        line-height 1.4em
    +below('m')
        width 100%
        padding 4rem 0 2rem 0
        h2
            font-size 2.4rem

.shots
    .date
        color text-disabled
        font-weight 400
        margin-top 1.2rem

.color-col
    & + .color-col .color-block
        border-top 1px solid border-grey

.color-block
    padding 2rem 0
    display flex
    .avatar
        border-radius border-radius-normal
        margin-right 1.5rem
        absolute left top
    .description
        position relative
        padding-left 4.4rem
        a
            color text-default
            &:hover
                color color-primary
        h5
            line-height 1.3em
            margin-bottom .2rem
            font-weight 500
            a
                color color-heading
    .colors
        display flex
        margin-left auto
        &:hover
            .color + .color
                margin-left .1rem
    .color
        display inline-block
        will-change margin-left
        transition margin-left 140ms ease
        & + .color
            margin-left -.8rem
        p
            padding .5rem 0
            display none
        span
            content ' '
            width 3rem
            height 3rem
            display block
            margin 0 auto
            border-radius 50%
            border 3px solid #fff
            padding 0 .5rem
    +below('m')
        flex-direction column
        .description
            width 100%
        .colors
            display block
            float none
            width 100%
            white-space nowrap
            margin-top 2rem
            .color
                margin-left 0 !important
                width 20%

.previous-loader
    padding 3rem 0
    text-align center
    border-top 1px solid border-grey

footer
    padding 3rem 0
    text-align center
    p
        margin-bottom .4rem
    small
        display block
    a
        color text-disabled
        &:hover
            color color-heading
    .muted
        margin-top 1.2rem
    .list
        margin-top 1.6rem

.profile
    padding 5rem 0 0 0
    a
        color text-default
        &:hover
            color color-primary
    .description
        position relative
        padding 0 0 3rem 5.3rem
        .inline
            vertical-align middle
        .avatar
            border-radius border-radius-normal
            margin-right 1.5rem
            absolute left top
        h3
            line-height 1.3em
            font-weight 500
            margin-bottom .2rem

    &-shot
        padding 0 0 3rem 0
        img
            border-radius border-radius-normal
            width 100%
            max-width 600px
            display block
            margin 0 auto
    .color
        display inline-block
        text-align center
        width 20%
        p
            padding .5rem 0
            font-weight 500
        span
            content ' '
            width 4rem
            height 4rem
            display block
            margin 0 auto
            border-radius 50%
            border 3px solid #fff
            padding 0 .5rem
    &-more
        padding 3rem 0 2rem 0
        p + p
            margin-top .6rem

    +below('m')
        padding 4rem 0 0 0
        .description
            padding 0 0 3rem 4.3rem
            img
                height 53px
                margin-right 1rem
            h3
                font-size font-size-h4
        .color
            span
                width 3rem
                height 3rem
            p
                font-size .8rem
.error-link
    text-align center
    margin-bottom 3rem
    .goto
        display block
        margin 0 auto
        padding 3rem 0
        width 60%
        &-left
            svg
                margin-right .4rem
        &-right
            svg
                margin-left .4rem
    .block
        margin-top 1.6rem
    a
        svg
            stroke color-primary
            relative top 4px
    & + .error-link
        border-left 2px solid border-grey

section.about-page
    .content-intro
        padding-bottom 3.5rem
    h5
        font-weight 400
        color text-default
    .about-links
        margin 3rem 0 2rem 0
        li
            color text-disabled
            a
                color color-heading
                &:hover
                    color color-primary
