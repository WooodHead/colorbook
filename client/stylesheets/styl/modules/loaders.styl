.loader
  border-style solid
  border-width .5rem
  border-color transparentify(#ffffff, 60%)
  border-left-color transparent
  width 5rem
  height 5rem
  border-radius 50%
  animation spin 1.3s infinite linear
  display block
  margin 0 auto
  &.disabled, &.hidden
    display none
  &.inline
    display inline-block
  &.small
    width 2.4rem
    height 2.4rem
    border-width .25rem
  &.large
    width 5rem
    height 5rem
  &.dark
    border-color transparentify(text-default, 20%)
    border-left-color transparent
